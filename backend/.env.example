# 应用配置
PROJECT_NAME=股票信息采集系统
VERSION=1.0.0
API_V1_STR=/api/v1

# 数据库配置
# SQLite (开发环境)
DATABASE_URL=sqlite+aiosqlite:///./stock_data.db

# PostgreSQL (生产环境示例)
# DATABASE_URL=postgresql+asyncpg://username:password@localhost:5432/stock_db

# 安全配置
SECRET_KEY=your-super-secret-key-change-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS配置
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8000", "http://localhost:5173"]

# 外部API配置
STOCK_API_KEY=your-stock-api-key-here
STOCK_API_BASE_URL=https://api.example.com

# 日志配置
LOG_LEVEL=INFO

# Redis配置 (可选，用于缓存)
REDIS_URL=redis://localhost:6379

# 邮件配置 (可选，用于通知)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-email-password
EMAILS_FROM_EMAIL=your-email@gmail.com
EMAILS_FROM_NAME=Stock Info System